package hayride:ai@0.0.42;

interface agent {
    use context.{context};
    use types.{message};
    use model.{model};

    enum error-code {
        invoke-error,
        unknown
    }

    resource error {
        /// return the error code.
        code: func() -> error-code;
        /// errors can propagated with backend specific status through a string value.
        data: func() -> string;
    }

    resource agent {
        constructor();
        invoke: func(messages: list<message>) -> result<list<message>, error>;
    }
}
