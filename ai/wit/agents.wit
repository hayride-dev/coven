package hayride:ai@0.0.40;

interface agent {
    use context.{context};
    use types.{message};
    use model.{model};
    enum error-code {
        unknown
    }

    resource error {
        /// return the error code.
        code: func() -> error-code;
        /// errors can propagated with backend specific status through a string value.
        data: func() -> string;
    }

    resource agent {
        constructor(model: model);
        invoke: func(msg: message) -> result<_,error>;
    }
}
